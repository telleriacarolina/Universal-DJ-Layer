{
  "name": "universal-dj-layer",
  "version": "0.0.0-development",
  "description": "Universal pluggable control system enabling safe collaboration and real-time experimentation in any host application",
  "keywords": [
    "control-layer",
    "feature-flags",
    "rbac",
    "state-management",
    "audit-logging",
    "experimentation",
    "dj-layer",
    "runtime-control",
    "reversible-changes"
  ],
  "homepage": "https://github.com/telleriacarolina/Universal-DJ-Layer#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/telleriacarolina/Universal-DJ-Layer.git"
  },
  "bugs": {
    "url": "https://github.com/telleriacarolina/Universal-DJ-Layer/issues"
  },
  "author": "Carolina Telleria <your-email@example.com>",
  "license": "MIT",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/cjs/index.js",
      "import": "./dist/esm/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && npm run build:cjs && npm run build:esm && npm run build:types",
    "build:cjs": "tsc -p tsconfig.json",
    "build:esm": "tsc -p tsconfig.esm.json && echo '{\"type\":\"module\"}' > dist/esm/package.json",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/types",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "size": "npm run build && size-limit",
    "analyze": "npm run build && source-map-explorer dist/**/*.js",
    "prepublishOnly": "node scripts/prepublish-check.js && npm run build"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.9",
    "jest": "^30.2.0",
    "rimraf": "^5.0.5",
    "size-limit": "^11.0.2",
    "source-map-explorer": "^2.5.3",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
